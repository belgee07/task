{# templates/sales_report/report.html.twig #}
<h1>Sales Report: Current Month vs Previous Month</h1>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    th {
        background-color: #f4f4f4;
        font-weight: bold;
    }
    tr:hover {
        background-color: #f1f1f1;
    }
    .positive {
        color: green;
    }
    .negative {
        color: red;
    }
    .neutral {
        color: black;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Department</th>
            <th>Current Month Sales</th>
            <th>Previous Month Sales</th>
            <th>Difference</th>
        </tr>
    </thead>
    <tbody>
        {% for department in salesComparison %}
            <tr>
                <td>{{ department.department.departmentName }}</td>
                <td>{{ department.currentMonthSales }}</td>
                <td>{{ department.previousMonthSales }}</td>
                <td class="{% if department.difference < 0 %}negative{% elseif department.difference > 0 %}positive{% else %}neutral{% endif %}">
                    {{ department.difference }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
