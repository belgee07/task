{% extends 'base.html.twig' %}

{% block title %}Edit Sales{% endblock %}

{% block body %}
    <h1 class="my-4">Edit Sales</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.department, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.amount, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
    {{ form_end(form) }}
{% endblock %}
